<h1>Change the the Band Name</h1>

<form action="<%= band_url(@band.id) %>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label for="band_name">Name:</label>
  <input
    type="text"
    name="band[name]"
    id="band_name"
    value="<%= @band.name %>">
  <br><br>


  <input type="submit" value="Update Name">
</form>
<%= link_to "back", band_url(@band.id) %>
