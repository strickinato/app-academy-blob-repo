<h1>Add a new album</h1>

<form action="<%= albums_url %>" method="POST">
  <label for="album_title">Title</label>
  <input
    type="text"
    name="album[title]"
    id="album_title"
    value="<%= @album.title %>">
  <br><br>

  <label>Studio
    <input type="radio" name="album[recording_type]" value="studio"
    <%= 'checked' if @album.recording_type == 'studio' %>>
  </label>

  <label>Live
    <input type="radio" name="album[recording_type]" value="live"
    <%= 'checked' if @album.recording_type == 'live' %>>
  </label>
  <br><br>

  <label for="album_band_id">Which Band?</label>
  <select
    name="album[band_id]"
    id="album_band_id">
    <% Band.all.each do |band| %>
      <option value="<%= band.id %>"
      <%= 'selected' if @album.band_id == band.id %>
      ><%= band.name %></option>
    <% end %>
  </select>
  <br><br>

  <input type="submit" value="Create Album">
</form>
