<h1>Fill in the request form</h1>

<form action="<%= cat_rental_requests_url %>" method="POST"> 
  
  <input 
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
    
<label for="cat_rental_request_cat_id">Select cat</label>
<% %>

  <select name="cat_rental_request[cat_id]" id="cat_rental_request_cat_id"      value="<%= @cat_rental_request.cat_id %>">
    <option value="blank"></option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id%>" <%= 'selected' if @cat_rental_request.cat_id == cat.id %>><%= cat.name %></option>
    <% end %>
  </select><br>
  <label for="cat_rental_request_start_date">Start Date</label>
    <input type="date" name="cat_rental_request[start_date]" id="cat_rental_request_start_date" value="<%= @cat_rental_request.start_date %>"> <br>
  <label for="cat_rental_request_end_date">End Date</label>
    <input type="date" name="cat_rental_request[end_date]" id="cat_rental_request_end_date" value="<%= @cat_rental_request.end_date %>"> <br>
  <input type="submit" value="Submit request!">
</form>